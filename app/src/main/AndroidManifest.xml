<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shoutless">

        <activity
            android:name="io.petkorazzi.shoutless.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.App.Starting">
            <!-- The intent-filter is now correctly placed INSIDE the activity tag -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.petkorazzi.shoutless.DisplayActivity" />
        <activity
            android:name="io.petkorazzi.shoutless.SettingsActivity" />
        <activity
            android:name="io.petkorazzi.shoutless.ClapbackActivity" />
    </application>

</manifest>